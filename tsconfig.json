{
    "compilerOptions": {
      "allowJs": true, // will change this when i convert all files to ts
      "lib": ["dom", "dom.iterable", "esnext"],
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "incremental": true,
      "paths": {
        "@/*": ["./*"]
      },
      "typeRoots": [
        "./node_modules/@types",
        "./node_modules/discord.js/typings"
      ],
    },
    
    "include": ["commands/**/*", "events/**/*", "utils/**/*"],
    "exclude": ["node_modules"]
  }